<h2> All Posts </h2>
<div class="">
	<% for user in @users %>
		<% if !user.photos.empty? %>
			<div>
				<% for photo in user.photos %>
					<%= photo.title %>
					<%= image_tag photo.image.url(:medium) %> </br>
					by <%= link_to user.nickname, pages_show_path(id: user.id) %> </br>
					<% if user_signed_in? %>
						<%= link_to "Full view", photo_path(photo) %>
					<% end %>

					<% if photo.likes_count.blank? %>
						<div>
							No likes yet...
						</div>
					<% else %>
						<div>
							<%= photo.likes_count %> people <span class="glyphicon glyphicon-thumbs-up"> </span> it.
						</div>
					<% end %>
					
				<% end %>		
			</div>
				<% if user_signed_in? %>
					<%= link_to followships_path(follower_id: user), method: :post do %>
						<span class="glyphicon glyphicon-eye-open" %></span> <span class="follow_it">Follow</span>
					<% end %>
					<%= link_to followship_path(id: user.followships.find_by(user_id: current_user.id).id), method: :delete do %>
						<span class="glyphicon glyphicon-eye-close" %></span> <span class="stop_follow">Stop Follow</span>
					<% end %>
				<% end %>				
		<% end %>
	<% end %>
</div>.id