<h1><%= @photo.title %></h1>
<div class="">
	<%= image_tag @photo.image.url(:large) %>
</div>

<div class="">
	<%= @photo.description %>
</div>

<h2><%= link_to 'Comments', '#', id: 'comments-link' %></h2>
<section id="comment-section">
  <ul id="comments">
    <%= render @photo.comments %>
  </ul>
<% if current_user %>
  <h2>Add a comment:</h2>
  <%= render 'comments/form' %>
 <% end %>
</section>  
